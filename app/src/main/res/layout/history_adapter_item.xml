<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    tools:ignore="UseCompoundDrawables">
    <TextView
        android:id="@+id/tv_history_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/textnormalcolor"
        android:textSize="@dimen/textlargernormal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="@dimen/largermargin"
        android:drawablePadding="@dimen/normalmargin"
        android:drawableStart="@drawable/icon_history"/>
    <ImageView
        android:id="@+id/iv_history_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/normalmargin"
        android:paddingBottom="@dimen/normalmargin"
        android:paddingStart="@dimen/largermargin"
        android:paddingEnd="@dimen/largermargin"
        android:src="@drawable/delete_history"
        android:contentDescription="@null"/>
</LinearLayout>
