<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#00000000"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/marker_window"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:id="@+id/map_telIV"
        android:gravity="center"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/marker_titleTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="津南路派出所"
                android:textColor="@color/white"
                android:textSize="13sp"
                />
            <TextView
                android:id="@+id/marker_phoneTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="87686876"
                android:textColor="@color/white"
                />
        </LinearLayout>

        <ImageView

            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="centerCrop"
            android:layout_marginLeft="5dp"
            android:src="@drawable/map_tel"
            />



    </LinearLayout>
    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@drawable/markerright_window"
        android:id="@+id/map_NaiIV"
        >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/navibg"
            />
    </LinearLayout>

</LinearLayout>
