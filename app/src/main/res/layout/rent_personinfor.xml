<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:gravity="center_vertical"
        >
        <View
            android:id="@+id/deleteCustomerV"
            android:layout_marginLeft="10dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/delete_custom"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/inputNameTextsize"
            android:padding="10dp"
            android:text="租户信息"
            android:textColor="#000000"
            android:background="#ffffff"
            />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/inputLineaColor"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/inputNameTextsize"
            android:padding="10dp"
            android:text="姓名:"
            android:textColor="#000000"
            android:id="@+id/inputNameTV"
            android:background="#ffffff"
            />

        <EditText
            android:id="@+id/inputValueNameET"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/inputEditTextsize"
            android:hint="请输入姓名"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:background="#ffffff"
            android:textColor="#333333"
            android:paddingRight="10dp"
            android:gravity="right"
            android:focusable="false"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/inputLineaColor"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:gravity="center_vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/inputNameTextsize"
            android:padding="10dp"
            android:text="身份证号:"
            android:textColor="#000000"
            />

        <EditText
            android:id="@+id/inputValueIDcardET"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/inputEditTextsize"
            android:hint="请输入身份证号"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:background="#ffffff"
            android:textColor="#333333"
            android:focusable="false"
            android:paddingRight="10dp"
            android:gravity="right"
            android:digits="@string/psdpatten"
            />

        <View
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/scan_id"
            android:id="@+id/goScanIDcardV"
            android:layout_marginEnd="10dp"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/inputLineaColor"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/inputNameTextsize"
            android:padding="10dp"
            android:text="手机号:"
            android:textColor="#000000"
            />

        <EditText
            android:id="@+id/inputValueTelET"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/inputEditTextsize"
            android:hint="请输入手机号"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:background="#ffffff"
            android:inputType="number"
            android:paddingRight="10dp"
            android:gravity="right"
            android:textColor="#333333"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/inputLineaColor"
        />
</LinearLayout>