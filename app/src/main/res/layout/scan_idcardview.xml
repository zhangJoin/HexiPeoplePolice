<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#ffffff"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:gravity="center_vertical"
        >
        <TextView
            android:id="@+id/nameview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/inputNameTextsize"
            android:padding="10dp"
            android:text="身份证号:"
            android:textColor="#000000"
            />

        <EditText
            android:id="@+id/inputValueIDcardET"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/inputEditTextsize"
            android:hint="请输入身份证号"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:background="#ffffff"
            android:digits="@string/psdpatten"
            />

        <View
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/scan_id"
            android:id="@+id/goScanIDcardV"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#eaeaea"
        />
</LinearLayout>