<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="180dp"
    android:fitsSystemWindows="true"
    android:gravity="center_vertical"
    android:background="@drawable/region1_shape"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="@color/textblackcolor"
        android:text="更新下载"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <com.xiante.jingwu.qingbao.CustomView.CustomProgressBar
            android:id="@+id/pb_download"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/tv_progress_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/bt_down_cancel"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:text="取消"
            android:textSize="@dimen/textnormal"
            android:layout_marginRight="5dp"
            android:background="@drawable/region1_shape"
            android:textColor="@color/textnormalcolor"/>
        <Button
            android:id="@+id/bt_down_conform"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:text="立即更新"
            android:layout_marginLeft="5dp"
            android:background="@drawable/region1_shape"
            android:textSize="@dimen/textnormal"
            android:textColor="@color/textnormalcolor"/>
    </LinearLayout>
</LinearLayout>
