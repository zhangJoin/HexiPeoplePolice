<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    >
    <ImageView
        android:id="@+id/iv_result_item"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:src="@drawable/l00_login_logo"
        android:contentDescription="@null"/>
    <TextView
        android:id="@+id/tv_result_name_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@id/iv_result_item"
        android:textColor="#646464"
        android:textSize="@dimen/textlargernormal" />

    <TextView
        android:id="@+id/tv_result_phone_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_result_name_item"
        android:layout_toEndOf="@id/iv_result_item"
        android:textColor="#999999"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/tv_result_state_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/largermargin"
        android:textColor="#999999"
        android:text="添加"
        android:textSize="16sp" />

</RelativeLayout>