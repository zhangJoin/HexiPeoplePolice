<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/inputNameTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/inputNameTextsize"
        android:text="租户信息"
        android:textColor="@color/inputViewNamecolor"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="15dp"
        android:background="#ffffff"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/renterContainerLL"
        android:orientation="vertical"
        >
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addCustomView"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="15dp"
        android:gravity="center_vertical"
        android:background="#ffffff"
        >
        <View
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/addcustomer"
            android:layout_gravity="center_horizontal"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加租户"
            android:layout_marginLeft="15dp"
            android:textSize="14sp"
            android:textColor="#333333"
            />
    </LinearLayout>

</LinearLayout>