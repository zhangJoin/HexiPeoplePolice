<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="180dp"
    android:fitsSystemWindows="true"
    android:gravity="center_vertical"
    android:background="@drawable/region1_shape"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="@color/textblackcolor"
        android:text="更改力量源名称"/>
    <EditText
        android:id="@+id/et_editor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_margin="@dimen/normalmargin"
        android:paddingTop="5dp"
        android:paddingLeft="@dimen/normalmargin"
        android:paddingEnd="@dimen/normalmargin"
        android:paddingBottom="5dp"
        android:inputType="textMultiLine"
        android:textColor="@color/textblackcolor"
        android:hint="请输入力量源名称"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:orientation="horizontal">
        <Button
            android:id="@+id/bt_editor_conform"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:text="@string/comform"
            android:background="@drawable/editor_shape"
            android:textSize="@dimen/textnormal"
            android:textColor="@color/white"/>
    </LinearLayout>
</LinearLayout>
